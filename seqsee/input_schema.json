{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$defs": {
    "attributes": {
      "type": "array",
      "items": {
        "type": ["string", "object"],
        "additionalProperties": {"type": "string"}
      }
    },
    "color": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"}
  },
  "type": "object",
  "properties": {
    "header": {
      "type": "object",
      "properties": {
        "title": {"type": "string"},
        "dimensions": {
          "type": "object",
          "properties": {
            "width" : {"type": "integer", "default": 10},
            "height": {"type": "integer", "default": 10}
          }
        },
        "defaultAttributes": {
          "type": "object",
          "properties": {
            "nodes": {"$ref": "#/$defs/attributes"},
            "edges": {"$ref": "#/$defs/attributes"}
          },
          "additionalProperties": false
        },
        "aliases": {
          "type": "object",
          "properties": {
            "colors": {
              "type": "object",
              "additionalProperties": {"$ref": "#/$defs/color"}
            },
            "attributes": {
              "type": "object",
              "additionalProperties": {"$ref": "#/$defs/attributes"}
            }
          },
          "additionalProperties": false
        }
      }
    },
    "nodes": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "x"         : {"type": "integer"                              },
          "y"         : {"type": "integer"                              },
          "position"  : {"type": "integer"                              },
          "label"     : {"type": "string"                               },
          "attributes": {                   "$ref": "#/$defs/attributes"}
        },
        "required": ["x", "y"],
        "additionalProperties": false
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": {"type": "string"},
          "target": {"type": "string"},
          "offset": {
            "type": ["object"],
            "description": "The endpoint of the edge relative to its source",
            "properties": { "x": {"type": "number"}, "y": {"type": "number"} },
            "required": ["x", "y"]
          },
          "label": {"type": "string"},
          "attributes": {"$ref": "#/$defs/attributes"}
        },
        "required": ["source"],
        "oneOf": [
          { "required": ["target"] },
          { "required": ["offset"] }
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["header"]
}
