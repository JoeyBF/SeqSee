{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$defs": {
    "attributes": {
      "type": "array",
      "items": {
        "type": ["string", "object"],
        "properties": {
          "color"    : {"type": "string"}                       ,
          "size"     : {"type": "number"}                       ,
          "thickness": {"type": "number"}                       ,
          "arrowTip" : { "enum": ["simple", "none"] }           ,
          "pattern"  : { "enum": ["solid", "dashed", "dotted"] }
        },
        "additionalProperties": {"type": "string"}
      },
      "default": []
    },
    "color": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"}
  },
  "type": "object",
  "properties": {
    "header": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object",
          "properties": { "htmltitle": {"type": "string", "default": ""} }
        },
        "chart": {
          "type": "object",
          "properties": {
            "width"      : { "type": ["integer", "null"], "default": null    },
            "height"     : { "type": ["integer", "null"], "default": null    },
            "scale"      : { "type": "number"           , "default":   60.00 },
            "nodeSize"   : { "type": "number"           , "default":    0.04 },
            "nodeSpacing": { "type": "number"           , "default":    0.02 },
            "nodeSlope"  : { "type": ["number", "null"] , "default":    0.00 }
          },
          "additionalProperties": false
        },
        "defaultAttributes": {
          "type": "object",
          "properties": {
            "nodes": {
              "$ref": "#/$defs/attributes",
              "default": [ {"color": "black"} ]
            },
            "edges": {
              "$ref": "#/$defs/attributes",
              "default": [ {"thickness": 0.02, "pattern": "solid"} ]
            }
          },
          "additionalProperties": false
        },
        "aliases": {
          "type": "object",
          "properties": {
            "colors": {
              "type": "object",
              "additionalProperties": {"$ref": "#/$defs/color"},
              "default": {}
            },
            "attributes": {
              "type": "object",
              "additionalProperties": {"$ref": "#/$defs/attributes"},
              "default": {}
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "nodes": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "x"         : {"type": "integer"}              ,
          "y"         : {"type": "integer"}              ,
          "position"  : {"type": "integer", "default": 0},
          "label"     : {"type": "string"}               ,
          "attributes": {"$ref": "#/$defs/attributes"}
        },
        "required": ["x", "y"],
        "additionalProperties": false
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": {"type": "string"},
          "target": {"type": "string"},
          "offset": {
            "type": ["object"],
            "description": "The endpoint of the edge relative to its source",
            "properties": { "x": {"type": "number"}, "y": {"type": "number"} },
            "required": ["x", "y"]
          },
          "label": {"type": "string"},
          "attributes": {"$ref": "#/$defs/attributes"}
        },
        "required": ["source"],
        "oneOf": [
          { "required": ["target"] },
          { "required": ["offset"] }
        ],
        "additionalProperties": false
      }
    }
  }
}
