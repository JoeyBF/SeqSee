{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$defs": {
    "attributes": {
      "type": "array",
      "items": {
        "type": ["string", "object"],
        "properties": {
          "color"    : {"type": "string"}                       ,
          "size"     : {"type": "string"}                       ,
          "thickness": {"type": "string"}                       ,
          "arrowTip" : { "enum": ["simple", "none"] }           ,
          "pattern"  : { "enum": ["solid", "dashed", "dotted"] }
        },
        "additionalProperties": {"type": "string"}
      },
      "default": []
    },
    "color": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"}
  },
  "type": "object",
  "properties": {
    "header": {
      "type": "object",
      "properties": {
        "chart": {
          "type": "object",
          "properties": {
            "title"      : { "type": "string"          , "default": ""     },
            "width"      : { "type": "integer"         , "default": 32     },
            "height"     : { "type": "integer"         , "default": 20     },
            "scale"      : { "type": "number"          , "default": 100.00 },
            "nodeSize"   : { "type": "number"          , "default": 0.04   },
            "nodeSpacing": { "type": "number"          , "default": 0.02   },
            "nodeSlope"  : { "type": ["number", "null"], "default": 0.00   }
          },
          "additionalProperties": false
        },
        "defaultAttributes": {
          "type": "object",
          "properties": {
            "nodes": {"$ref": "#/$defs/attributes"},
            "edges": {"$ref": "#/$defs/attributes"}
          },
          "additionalProperties": false
        },
        "aliases": {
          "type": "object",
          "properties": {
            "colors": {
              "type": "object",
              "additionalProperties": {"$ref": "#/$defs/color"}
            },
            "attributes": {
              "type": "object",
              "additionalProperties": {"$ref": "#/$defs/attributes"}
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "nodes": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "x"         : {"type": "integer"}              ,
          "y"         : {"type": "integer"}              ,
          "position"  : {"type": "integer", "default": 0},
          "label"     : {"type": "string"}               ,
          "attributes": {"$ref": "#/$defs/attributes"}
        },
        "required": ["x", "y"],
        "additionalProperties": false
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": {"type": "string"},
          "target": {"type": "string"},
          "offset": {
            "type": ["object"],
            "description": "The endpoint of the edge relative to its source",
            "properties": { "x": {"type": "number"}, "y": {"type": "number"} },
            "required": ["x", "y"]
          },
          "label": {"type": "string"},
          "attributes": {"$ref": "#/$defs/attributes"}
        },
        "required": ["source"],
        "oneOf": [
          { "required": ["target"] },
          { "required": ["offset"] }
        ],
        "additionalProperties": false
      }
    }
  }
}
